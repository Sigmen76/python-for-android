from kivy.app import App
from kivy.uix.screenmanager import ScreenManager, Screen
from kivy.core.window import Window
from kivy.properties import ObjectProperty
import os
import json

#Window.size = (960, 540)
Window.fullscreen = True

class WindowOne(Screen):
    def SAVE(self):       
        
        if not os.path.isdir("/storage/emulated/0/Android/data/folder"):
            os.mkdir("/storage/emulated/0/Android/data/folder")   
       
class SaveApp(App):

    def build(self):
        
        sm = ScreenManager()
        sm.add_widget(WindowOne())
        
        return sm

if __name__ == '__main__':
    SaveApp().run()
